    <script>
        // Dữ liệu giả lập về các đối thủ cạnh tranh
        const competitorsData = [
            {
                name: "Sapo OmniAI",
                solution: "App \"Đăng bán sản phẩm đa Sàn\"",
                features: [
                    { text: "Đăng sản phẩm lên Shopee, Lazada, TikTok Shop.", filter: "all" },
                    { text: "Tích hợp sẵn từ khóa chuẩn SEO.", filter: "seo" },
                    { text: "Tự động liên kết sản phẩm từ Sàn với Sapo.", filter: "automation" },
                    { text: "Tiết kiệm thời gian đăng bán sản phẩm đa sàn và đa gian chỉ từ 2p/kênh.", filter: "automation" }
                ],
                pros: [
                    "Tối ưu SEO, nâng cao thứ hạng tìm kiếm.",
                    "Tiết kiệm thời gian liên kết sản phẩm.",
                    "Hỗ trợ tự động liên kết sản phẩm."
                ],
                cons: ["Chi phí thêm nếu không sử dụng gói OmniAI."],
                price: "100.000 VNĐ/tháng (từ 01/09/2025)",
                isSapo: true
            },
            {
                name: "Kiot Việt",
                solution: "Tích hợp trong gói Chuyên nghiệp",
                features: [
                    { text: "Hỗ trợ đăng bán đa sàn (Tiktok, Shopee, Lazada, Sendo).", filter: "all" },
                    { text: "Hỗ trợ tìm sản phẩm để liên kết thủ công.", filter: "all" },
                    { text: "Không tự động liên kết sản phẩm.", filter: "automation" },
                    { text: "Không hỗ trợ từ khóa chuẩn SEO.", filter: "seo" }
                ],
                pros: ["Đăng bán nhiều gian hàng.", "Đồng bộ đơn, tồn kho về Kiot Việt."],
                cons: ["Không có phần tối ưu SEO."],
                price: "Bao gồm trong gói Chuyên nghiệp",
                isSapo: false
            },
            {
                name: "Nhanh.vn",
                solution: "Nhanh.Ecom",
                features: [
                    { text: "Đăng bán thủ công trên các sàn đã kết nối.", filter: "all" },
                    { text: "Không hỗ trợ từ khóa chuẩn SEO.", filter: "seo" },
                    { text: "Không đăng bán nhiều sàn cùng lúc.", filter: "automation" }
                ],
                pros: ["Đăng bán thủ công, tính năng cơ bản."],
                cons: ["Quy trình thủ công.", "Không có tính năng SEO."],
                price: "Theo gói dịch vụ",
                isSapo: false
            },
            {
                name: "Haravan",
                solution: "Không hỗ trợ đăng bán trực tiếp",
                features: [
                    { text: "Chỉ hỗ trợ xuất file sản phẩm theo mẫu từng sàn.", filter: "all" },
                    { text: "Nhà bán hàng phải nhập file ngược lại lên sàn.", filter: "automation" }
                ],
                pros: ["Dễ dàng quản lý dữ liệu sản phẩm qua file Excel."],
                cons: ["Quy trình hoàn toàn thủ công.", "Không có tính năng đăng bán trực tiếp."],
                price: "Theo gói dịch vụ",
                isSapo: false
            },
            {
                name: "Bigseller",
                solution: "Sao chép sản phẩm thủ công",
                features: [
                    { text: "Đăng bán thủ công bằng cách sao chép sản phẩm.", filter: "all" },
                    { text: "Có cấu hình tự động đổi nội dung và đăng bán trên sàn khác.", filter: "automation" },
                    { text: "Không hỗ trợ từ khóa chuẩn SEO.", filter: "seo" },
                    { text: "Không đăng bán nhiều sàn cùng lúc.", filter: "automation" }
                ],
                pros: ["Đăng bán thủ công, tính năng cơ bản."],
                cons: ["Quy trình thủ công.", "Không có tính năng SEO."],
                price: "Miễn phí (có thể có gói trả phí)",
                isSapo: false
            }
        ];

        /**
         * Hàm tạo thẻ so sánh cho từng đối thủ
         * @param {object} data - Dữ liệu của một đối thủ
         * @returns {HTMLElement} Thẻ so sánh HTML
         */
        function createCompetitorCard(data) {
            const card = document.createElement('div');
            // Xác định màu viền và màu nền riêng cho thẻ của Sapo
            const cardBorder = data.isSapo ? 'border-[#EF8354]' : 'border-gray-200';
            const cardBg = data.isSapo ? 'bg-orange-50' : 'bg-white';
            card.className = `p-6 rounded-lg shadow-lg border-2 ${cardBorder} ${cardBg}`;

            // Tạo danh sách các tính năng
            let featuresHTML = data.features.map(f => `<li class="feature-row" data-filter="${f.filter}">${f.text}</li>`).join('');
            // Tạo danh sách ưu điểm
            let prosHTML = data.pros.map(p => `<li><span class="text-green-500 mr-2">✔</span>${p}</li>`).join('');
            // Tạo danh sách nhược điểm
            let consHTML = data.cons.map(c => `<li><span class="text-red-500 mr-2">✖</span>${c}</li>`).join('');

            card.innerHTML = `
                <h3 class="text-xl font-bold text-center mb-1 ${data.isSapo ? 'text-[#EF8354]' : 'text-[#003F5C]'}">${data.name}</h3>
                <p class="text-sm text-center text-gray-500 mb-4">${data.solution}</p>
                
                <div class="my-4">
                    <h4 class="font-semibold mb-2 border-b pb-1">Tính Năng Chính</h4>
                    <ul class="list-disc list-inside text-gray-700 space-y-1 text-sm">${featuresHTML}</ul>
                </div>
                
                <div class="my-4">
                    <h4 class="font-semibold mb-2 border-b pb-1">Ưu Điểm</h4>
                    <ul class="text-gray-700 space-y-1 text-sm">${prosHTML}</ul>
                </div>

                <div class="my-4">
                    <h4 class="font-semibold mb-2 border-b pb-1">Nhược Điểm</h4>
                    <ul class="text-gray-700 space-y-1 text-sm">${consHTML}</ul>
                </div>
                
                <div class="mt-6 pt-4 border-t feature-row" data-filter="price">
                    <p class="text-sm font-semibold">Giá Bán:</p>
                    <p class="font-bold ${data.isSapo ? 'text-[#EF8354]' : 'text-[#003F5C]'}">${data.price}</p>
                </div>
            `;
            return card;
        }

        // Chờ toàn bộ nội dung HTML được tải xong
        document.addEventListener('DOMContentLoaded', function() {
            const grid = document.getElementById('competitor-grid');
            // Hiển thị tất cả các thẻ đối thủ ban đầu
            competitorsData.forEach(comp => {
                grid.appendChild(createCompetitorCard(comp));
            });

            const filterButtons = document.querySelectorAll('.filter-btn');
            const featureRows = document.querySelectorAll('.feature-row');

            // Thiết lập sự kiện click cho các nút lọc
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const filter = button.dataset.filter;
                    
                    // Cập nhật trạng thái 'active' cho nút được chọn
                    filterButtons.forEach(btn => {
                        btn.classList.remove('bg-[#34657F]', 'text-white');
                        btn.classList.add('bg-white', 'text-[#34657F]');
                    });
                    button.classList.add('bg-[#34657F]', 'text-white');
                    button.classList.remove('bg-white', 'text-[#34657F]');

                    // Lặp qua tất cả các hàng tính năng để ẩn/hiện
                    featureRows.forEach(row => {
                        if (filter === 'all' || row.dataset.filter === filter) {
                            row.classList.remove('dimmed');
                        } else {
                            row.classList.add('dimmed');
                        }
                    });
                });
            });

            // Khởi tạo biểu đồ radar
            const radarCtx = document.getElementById('sapoRadarChart').getContext('2d');
            new Chart(radarCtx, {
                type: 'radar',
                data: {
                    labels: ['Tự Động Hóa', 'Hỗ Trợ SEO', 'Dễ Sử Dụng', 'Đồng Bộ Tồn Kho', 'Chi Phí Ban Đầu'],
                    datasets: [{
                        label: 'Sapo OmniAI',
                        data: [5, 5, 4, 5, 3],
                        fill: true,
                        backgroundColor: 'rgba(239, 131, 84, 0.2)',
                        borderColor: 'rgb(239, 131, 84)',
                        pointBackgroundColor: 'rgb(239, 131, 84)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(239, 131, 84)'
                    }, {
                        label: 'Đối Thủ Trung Bình',
                        data: [2, 1, 3, 3, 4],
                        fill: true,
                        backgroundColor: 'rgba(52, 101, 127, 0.2)',
                        borderColor: 'rgb(52, 101, 127)',
                        pointBackgroundColor: 'rgb(52, 101, 127)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(52, 101, 127)'
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: {
                                color: '#BFC0C0'
                            },
                            grid: {
                                color: '#BFC0C0'
                            },
                            pointLabels: {
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                },
                                color: '#003F5C'
                            },
                            ticks: {
                                backdropColor: '#F0F4F8',
                                color: '#4F5D75',
                                stepSize: 1,
                                max: 5,
                                min: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                      return label.join(' ');
                                    } else {
                                      return label;
                                    }
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
